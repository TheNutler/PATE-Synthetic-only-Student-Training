  "latent_steering": {
    "enabled": true,
    "steps": 20,
    "learning_rate": 0.05,
    "noise_scale": 0.1,
    "use_for_classes_below_quota": true
  },
  "preprocessing": {
    "normalize_mean": [0.1307],
    "normalize_std": [0.3081]
  }
}

