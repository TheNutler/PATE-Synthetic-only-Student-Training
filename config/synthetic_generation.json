{
  "filtering": {
    "min_per_class": 150,
    "max_per_class": 500,
    "default_confidence_threshold": 0.90,
    "rare_class_threshold": 0.70,
    "rare_classes": [1, 8],
    "diversity_threshold": 3.0,
    "min_memorization_distance": 2.0,
    "quota_flexibility_percent": 10
